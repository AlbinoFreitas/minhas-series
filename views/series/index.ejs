<% include ../partials/header %>

<section id="about">
    <div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
        <h2>Séries</h2>
        <p>Suas séries cadastradas <a href="/series/nova" class="btn btn-primary">Nova</a></p>
        <table class="table table-hover">
            <tr>
                <th>Nome</th>
                <th>Status</th>
            </tr>
            <% series.forEach(serie => { %>
                <tr>
                    <td><%= serie.name %></td>
                    <td><%= serie.status %></td>
                </tr>
            <% }) %>
        </table>
        </div>
    </div>
    </div>
</section>

<% include ../partials/footer %>